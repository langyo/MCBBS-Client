{
  "name": "mcbbs-client-electron",
  "version": "0.3.0",
  "description": "MCBBS 客户端",
  "main": "index.js",
  "scripts": {
    "start": "electron ./index.js",
    "watch": "concurrently \"npm run watch:code\" \"npm run watch:server\"",
    "watch:code": "watchify ../../src/viewManager/mainViewRender.js -t babelify -o public/bundle.js --release --verbose",
    "watch:server": "http-server -p 9232",
    "build": "browserify ../../src/viewManager/mainViewRender.js -o public/bundle.js -t babelify",
    "package": "electron-packager ./ MCBBS-Client --all --overwrite --out=./packaged/ --icon=./public/img/logo.ico",
    "package:windows": "electron-packager ./ MCBBS-Client --platform=win32 --overwrite --out=./packaged/ --icon=./public/img/logo.ico",
    "package:mac": "electron-builder build --mac --config electron-builder.json --publish never",
    "test": "jest --watch"
  },
  "author": "langyo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/langyo/MCBBS-Client/issues"
  },
  "homepage": "https://github.com/langyo/MCBBS-Client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langyo/MCBBS-Client.git"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-typescript": "^7.4.4",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.0-beta.0",
    "concurrently": "^4.1.0",
    "http-server": "^0.11.1",
    "regenerator-runtime": "^0.13.1",
    "watchify": "^3.11.1",
    "webpack": "^4.26.1"
  },
  "keywords": [],
  "devDependencies": {
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "electron-packager": "^13.0.1",
    "jest": "^24.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "current"
          }
        }
      ],
      [
        "@babel/preset-react"
      ],
      [
        "@babel/preset-typescript"
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  }
}
